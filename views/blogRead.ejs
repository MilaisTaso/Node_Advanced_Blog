<%- include("./head"); %>
  <title><%= singleBlog.title %></title>
</head>
<body>
  <%- include("./header"); %>
  <main>
    <div class="blog-read">
      <h1><%= singleBlog.title %></h1>
      <img src="/public/images<%= singleBlog.image %>" alt="blog-image">
      <p><%= singleBlog.textBody %></p>
    </div>
    <div class="bottom">
      <% if(session !== undefined){ %>
        <a href="/blog/update/<%= singleBlog._id %>" class="create-button">編集する</a>
      <% } %>
      <% if(session !== undefined) { %>
        <a href="/blog/delete/<%= singleBlog._id %>" class="login-button">消去する</a>
      <% } %>
    </div>
  </main>
  <%- include("./footer"); %>
</body>
</html>
